<!-- adjust to make view profile work. -->

<h1>Check out, <%= @ticket.user.username %>'s profile!</h1>


<a href="/sessions/logout">logout</a>

<div id="new-ticket"></div>

<div id="ticket-post-wrapper">
  <h3><%= @user.username %>'s ticket posts:</h3>
  <div id="ticket-post">
    <% @user.tickets.each do |ticket| %>
    <div id="user-ticket<%= ticket.id %>">
      <a href='tickets/<%= ticket.id %>'>artist: <%= ticket.artist %> | location: <%= ticket.location %> |
      date: <%= ticket.date %> |
      price: $<%= ticket.price %>
      </a>
      <a class="delete-link" href='/users/<%= @user.id %>/tickets/<%= ticket.id %>/delete'>Delete this post</a>
    </div>
    <% end %>
  </div>

</div>